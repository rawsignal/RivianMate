@page "/settings"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using RivianMate.Api.Components.Shared
@using RivianMate.Api.Components.Settings
@using RivianMate.Core.Entities
@using RivianMate.Core.Enums
@attribute [Authorize]

@inject RivianAccountService RivianAccountService
@inject VehicleService VehicleService
@inject UserPreferencesService UserPreferencesService
@inject UserLocationService UserLocationService
@inject TimeZoneService TimeZoneService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject ILogger<Settings> Logger

<PageTitle>Settings - RivianMate</PageTitle>

<div style="max-width: 800px;">
    <div style="margin-bottom: var(--space-8);">
        <h1 style="display: flex; align-items: center; gap: var(--space-3);">
            <Icon Name="settings" Size="28" Style="color: var(--color-accent);" />
            Settings
        </h1>
    </div>

    <!-- Display Preferences Section -->
    <div class="card mb-6">
        <div class="card-header">
            <h2 class="card-title">
                <Icon Name="settings" Size="20" Style="color: var(--color-accent);" />
                Display Preferences
            </h2>
        </div>
        <div style="padding: var(--space-4);">
            @if (_preferencesLoading)
            {
                <div style="text-align: center;">
                    <div class="loading-spinner"></div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="form-label">Distance & Speed</label>
                    <select class="form-select" @bind="_preferences!.DistanceUnit" @bind:after="SavePreferencesAsync">
                        <option value="@DistanceUnit.Miles">Miles (mph)</option>
                        <option value="@DistanceUnit.Kilometers">Kilometers (km/h)</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Temperature</label>
                    <select class="form-select" @bind="_preferences.TemperatureUnit" @bind:after="SavePreferencesAsync">
                        <option value="@TemperatureUnit.Fahrenheit">Fahrenheit</option>
                        <option value="@TemperatureUnit.Celsius">Celsius</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Tire Pressure</label>
                    <select class="form-select" @bind="_preferences.TirePressureUnit" @bind:after="SavePreferencesAsync">
                        <option value="@TirePressureUnit.Psi">PSI</option>
                        <option value="@TirePressureUnit.Bar">bar</option>
                        <option value="@TirePressureUnit.KPa">kPa</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Time Zone</label>
                    <select class="form-select" style="max-width: 320px;"
                            value="@(_preferences.TimeZoneId ?? "")"
                            @onchange="OnTimeZoneChanged">
                        <option value="">Auto-detect from browser</option>
                        @foreach (var tz in TimeZoneService.CommonTimeZones)
                        {
                            <option value="@tz.Id">@tz.DisplayName</option>
                        }
                    </select>
                    <p class="form-hint">Override browser timezone detection (useful if times show in UTC)</p>
                </div>

                @if (_preferencesSaveSuccess)
                {
                    <div class="alert alert-success" style="margin-top: var(--space-3);">
                        <Icon Name="check" Size="16" />
                        Preferences saved
                    </div>
                }
            }
        </div>
    </div>

    <!-- Home Charging Section -->
    <div class="card mb-6">
        <div class="card-header">
            <h2 class="card-title">
                <Icon Name="zap" Size="20" Style="color: var(--color-accent);" />
                Home Charging Cost
            </h2>
        </div>
        <div style="padding: var(--space-4);">
            @if (_preferencesLoading)
            {
                <div style="text-align: center;">
                    <div class="loading-spinner"></div>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label class="form-label">Electricity Rate</label>
                    <div style="display: flex; gap: var(--space-2); align-items: center;">
                        <input type="number" step="0.001" min="0" max="1"
                               class="form-input" style="width: 100px;"
                               placeholder="0.15"
                               value="@_preferences!.HomeElectricityRate"
                               @onchange="OnElectricityRateChanged" />
                        <select class="form-select" style="width: 120px;"
                                @bind="_preferences.CurrencyCode" @bind:after="SavePreferencesAsync">
                            @foreach (var currency in SupportedCurrencies.Codes)
                            {
                                <option value="@currency.Key">@currency.Key</option>
                            }
                        </select>
                        <span style="color: var(--color-text-muted);">/kWh</span>
                    </div>
                    <p class="form-hint">Used to estimate home charging cost</p>
                </div>

                @if (_preferencesSaveSuccess)
                {
                    <div class="alert alert-success" style="margin-top: var(--space-3);">
                        <Icon Name="check" Size="16" />
                        Preferences saved
                    </div>
                }
            }
        </div>
    </div>

    <!-- Charging Locations Section -->
    <div class="card mb-6">
        <div class="card-header">
            <h2 class="card-title">
                <Icon Name="map-pin" Size="20" Style="color: var(--color-accent);" />
                Charging Locations
            </h2>
        </div>
        <div style="padding: var(--space-4);">
            <LocationManager UserId="@_userId" Accounts="@_accounts" />
            <p class="form-hint" style="margin-top: var(--space-3);">
                Charges within 100m of these locations will be tagged with the location name.
            </p>
        </div>
    </div>

    <!-- Danger Zone -->
    <div class="card mb-6 danger-card">
        <div class="card-header">
            <h2 class="card-title" style="color: var(--color-error);">
                <Icon Name="alert-triangle" Size="20" Style="color: var(--color-error);" />
                Danger Zone
            </h2>
        </div>
        <div style="padding: var(--space-4);">
            <p style="color: var(--color-text-muted); margin-bottom: var(--space-4);">
                Removing a Rivian account will permanently delete all associated vehicles and their data, including charging history, drive logs, and battery health records.
            </p>
        </div>
    </div>

    <!-- Rivian Accounts Section -->
    <div class="card mb-6">
        <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
            <h2 class="card-title">
                <Icon Name="user" Size="20" Style="color: var(--color-accent);" />
                Linked Rivian Accounts
            </h2>
            <a href="/rivian/add" class="btn btn-primary" style="font-size: 0.875rem; padding: var(--space-2) var(--space-4);">
                <Icon Name="plus" Size="16" />
                Add Account
            </a>
        </div>

        @if (_isLoading)
        {
            <div style="padding: var(--space-8); text-align: center;">
                <div class="loading-spinner"></div>
            </div>
        }
        else if (_accounts == null || _accounts.Count == 0)
        {
            <div style="padding: var(--space-8); text-align: center; color: var(--color-text-muted);">
                <Icon Name="user" Size="48" Style="opacity: 0.3; margin-bottom: var(--space-4);" />
                <p style="margin-bottom: var(--space-4);">No Rivian accounts linked yet.</p>
                <a href="/rivian/add" class="btn btn-primary">
                    <Icon Name="plus" Size="16" />
                    Link Your First Account
                </a>
            </div>
        }
        else
        {
            <div class="account-list">
                @foreach (var account in _accounts)
                {
                    var vehicleCount = _vehicleCounts.GetValueOrDefault(account.Id, 0);
                    <div class="account-item">
                        <div class="account-info">
                            <div class="account-icon">
                                <Icon Name="car" Size="24" />
                            </div>
                            <div class="account-details">
                                <p class="account-email">@account.RivianEmail</p>
                                <p class="account-meta">
                                    @vehicleCount vehicle@(vehicleCount != 1 ? "s" : "")
                                    @if (account.LastSyncAt.HasValue)
                                    {
                                        <span> Â· Last synced <LocalTime Value="@account.LastSyncAt.Value" Relative="true" /></span>
                                    }
                                </p>
                                @if (!string.IsNullOrEmpty(account.LastSyncError))
                                {
                                    <p class="account-error">
                                        <Icon Name="alert-triangle" Size="14" />
                                        @account.LastSyncError
                                    </p>
                                }
                            </div>
                        </div>
                        <div class="account-actions">
                            @if (_deletingAccountId == account.Id)
                            {
                                <div class="delete-confirm">
                                    <span class="delete-warning">Delete all data?</span>
                                    <button class="btn btn-danger btn-sm" @onclick="() => ConfirmDeleteAccount(account)" disabled="@_isDeleting">
                                        @if (_isDeleting)
                                        {
                                            <span>Deleting...</span>
                                        }
                                        else
                                        {
                                            <span>Yes, Delete</span>
                                        }
                                    </button>
                                    <button class="btn btn-secondary btn-sm" @onclick="CancelDelete" disabled="@_isDeleting">
                                        Cancel
                                    </button>
                                </div>
                            }
                            else
                            {
                                <a href="/rivian/refresh/@account.Id" class="btn btn-ghost btn-sm" title="Refresh authentication">
                                    <Icon Name="refresh-cw" Size="18" Style="color: var(--color-accent);" />
                                </a>
                                <button class="btn btn-ghost btn-sm" @onclick="() => StartDeleteAccount(account.Id)" title="Remove account">
                                    <Icon Name="trash-2" Size="18" Style="color: var(--color-error);" />
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-error" style="margin: var(--space-4);">
                @_errorMessage
            </div>
        }
    </div>
</div>

<style>
    .account-list {
        display: flex;
        flex-direction: column;
    }

    .account-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--space-4);
        border-bottom: 1px solid var(--color-border);
    }

    .account-item:last-child {
        border-bottom: none;
    }

    .account-info {
        display: flex;
        align-items: center;
        gap: var(--space-4);
    }

    .account-icon {
        width: 48px;
        height: 48px;
        background: rgba(255, 171, 0, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-accent);
    }

    .account-details {
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
    }

    .account-email {
        font-weight: 600;
        color: var(--color-text-primary);
    }

    .account-meta {
        font-size: 0.875rem;
        color: var(--color-text-muted);
    }

    .account-error {
        font-size: 0.75rem;
        color: var(--color-error);
        display: flex;
        align-items: center;
        gap: var(--space-1);
    }

    .account-actions {
        display: flex;
        align-items: center;
        gap: var(--space-2);
    }

    .delete-confirm {
        display: flex;
        align-items: center;
        gap: var(--space-2);
    }

    .delete-warning {
        font-size: 0.875rem;
        color: var(--color-error);
        font-weight: 500;
    }

    .btn-sm {
        font-size: 0.75rem;
        padding: var(--space-1) var(--space-2);
    }

    .btn-ghost {
        background: transparent;
        border: none;
        padding: var(--space-2);
        cursor: pointer;
        border-radius: var(--radius-md);
        transition: background-color 0.2s;
    }

    .btn-ghost:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    .btn-danger {
        background: var(--color-error);
        color: white;
        border: none;
    }

    .btn-danger:hover {
        background: #dc2626;
    }

    .danger-card {
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .form-group {
        margin-bottom: var(--space-4);
    }

    .form-label {
        display: block;
        font-weight: 500;
        margin-bottom: var(--space-2);
        color: var(--color-text-primary);
    }

    .form-input {
        background: var(--color-surface-elevated);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        padding: var(--space-2) var(--space-3);
        color: var(--color-text-primary);
        font-size: 0.875rem;
        width: 100%;
        max-width: 280px;
    }

    .form-select {
        width: 100%;
        max-width: 280px;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--color-accent);
        box-shadow: 0 0 0 3px var(--color-accent-bg);
    }

    .form-hint {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        margin-top: var(--space-1);
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #22c55e;
        padding: var(--space-2) var(--space-3);
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        gap: var(--space-2);
        font-size: 0.875rem;
    }

    @@media (max-width: 640px) {
        .account-item {
            flex-direction: column;
            align-items: flex-start;
            gap: var(--space-3);
        }

        .account-actions {
            align-self: flex-end;
        }

        .delete-confirm {
            flex-wrap: wrap;
        }
    }
</style>

@code {
    private List<RivianAccount>? _accounts;
    private Dictionary<int, int> _vehicleCounts = new();
    private Guid _userId;
    private bool _isLoading = true;
    private bool _isDeleting;
    private int? _deletingAccountId;
    private string? _errorMessage;

    // Preferences state
    private UserPreferences? _preferences;
    private bool _preferencesLoading = true;
    private bool _preferencesSaveSuccess;
    private System.Timers.Timer? _successTimer;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userIdClaim = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        if (Guid.TryParse(userIdClaim, out var userId))
        {
            _userId = userId;
        }

        // Load preferences and accounts in parallel
        var preferencesTask = LoadPreferencesAsync();
        var accountsTask = LoadAccountsAsync();
        await Task.WhenAll(preferencesTask, accountsTask);
    }

    private async Task LoadPreferencesAsync()
    {
        _preferencesLoading = true;
        try
        {
            _preferences = await UserPreferencesService.GetPreferencesAsync(_userId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load preferences");
            _preferences = new UserPreferences { UserId = _userId };
        }
        finally
        {
            _preferencesLoading = false;
        }
    }

    private async Task SavePreferencesAsync()
    {
        if (_preferences == null) return;

        try
        {
            await UserPreferencesService.SavePreferencesAsync(_preferences);
            ShowSaveSuccess();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to save preferences");
        }
    }

    private void ShowSaveSuccess()
    {
        _preferencesSaveSuccess = true;
        StateHasChanged();

        // Hide the success message after 2 seconds
        _successTimer?.Dispose();
        _successTimer = new System.Timers.Timer(2000);
        _successTimer.Elapsed += (_, _) =>
        {
            _preferencesSaveSuccess = false;
            InvokeAsync(StateHasChanged);
            _successTimer?.Dispose();
        };
        _successTimer.AutoReset = false;
        _successTimer.Start();
    }

    private async Task OnElectricityRateChanged(ChangeEventArgs e)
    {
        if (_preferences == null) return;

        if (double.TryParse(e.Value?.ToString(), out var rate))
        {
            _preferences.HomeElectricityRate = rate;
        }
        else
        {
            _preferences.HomeElectricityRate = null;
        }

        await SavePreferencesAsync();
    }

    private async Task OnTimeZoneChanged(ChangeEventArgs e)
    {
        if (_preferences == null) return;

        var value = e.Value?.ToString();
        _preferences.TimeZoneId = string.IsNullOrEmpty(value) ? null : value;

        await SavePreferencesAsync();

        // Apply the new timezone immediately
        TimeZoneService.SetUserPreferredTimeZone(_preferences.TimeZoneId);
    }

    private async Task LoadAccountsAsync()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            _accounts = await RivianAccountService.GetAccountsForUserAsync(_userId);

            // Get vehicle counts for each account
            _vehicleCounts.Clear();
            foreach (var account in _accounts)
            {
                var vehicles = await VehicleService.GetVehiclesForAccountAsync(account.Id);
                _vehicleCounts[account.Id] = vehicles.Count;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load Rivian accounts");
            _errorMessage = "Failed to load accounts. Please try again.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void StartDeleteAccount(int accountId)
    {
        _deletingAccountId = accountId;
        _errorMessage = null;
    }

    private void CancelDelete()
    {
        _deletingAccountId = null;
    }

    private async Task ConfirmDeleteAccount(RivianAccount account)
    {
        _isDeleting = true;
        _errorMessage = null;

        try
        {
            await RivianAccountService.DeleteAccountAsync(account);
            _deletingAccountId = null;
            await LoadAccountsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to delete Rivian account {AccountId}", account.Id);
            _errorMessage = "Failed to delete account. Please try again.";
        }
        finally
        {
            _isDeleting = false;
        }
    }
}
