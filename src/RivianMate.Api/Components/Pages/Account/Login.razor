@page "/login"
@using System.ComponentModel.DataAnnotations
@using System.Text
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.Extensions.Options
@using RivianMate.Core.Entities
@using RivianMate.Api.Components.Shared
@using RivianMate.Api.Configuration
@using RivianMate.Api.Services.Email

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@inject IEmailTrigger EmailTrigger
@inject IOptions<EmailConfiguration> EmailConfig
@inject ILogger<Login> Logger

<PageTitle>Sign In - RivianMate</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="logo-icon"></div>
            <h1>Welcome Back</h1>
            <p>Sign in to your RivianMate account</p>
        </div>

        @if (AccountDeleted == "true")
        {
            <div class="alert alert-success">
                Your account has been successfully deleted. All your data has been permanently removed.
            </div>
        }

        @if (_isDeactivated)
        {
            <div class="alert alert-error" style="margin-bottom: var(--space-4);">
                <strong>Account Deactivated</strong><br />
                Your account has been deactivated because your email was not verified. Please verify your email to reactivate your account.
            </div>

            @if (_verificationSent)
            {
                <div class="alert alert-success" style="margin-bottom: var(--space-4);">
                    Verification email sent! Please check your inbox and click the verification link.
                </div>
            }

            <div style="margin-bottom: var(--space-4);">
                <button type="button" class="btn btn-primary btn-full" @onclick="ResendVerificationEmail" disabled="@_sendingVerification">
                    @if (_sendingVerification)
                    {
                        <span>Sending...</span>
                    }
                    else
                    {
                        <span>Resend Verification Email</span>
                    }
                </button>
            </div>

            <div class="auth-footer">
                <p><a href="/login" @onclick="ResetDeactivatedState" @onclick:preventDefault>Try different account</a></p>
            </div>
        }
        else
        {
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-error">
                    @errorMessage
                </div>
            }

            <EditForm Model="Input" method="post" OnValidSubmit="LoginUser" FormName="login">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="email">Email</label>
                <InputText @bind-Value="Input.Email" id="email" type="email" placeholder="you@example.com" autocomplete="email" />
                <ValidationMessage For="() => Input.Email" class="validation-message" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <PasswordField @bind-Value="Input.Password" Name="Input.Password" Id="password" Placeholder="Enter your password" Autocomplete="current-password" />
                <ValidationMessage For="() => Input.Password" class="validation-message" />
            </div>

            <div class="form-group checkbox-group">
                <InputCheckbox @bind-Value="Input.RememberMe" id="rememberMe" />
                <label for="rememberMe">Remember me for 30 days</label>
            </div>

            <button type="submit" class="btn btn-primary btn-full">Sign In</button>

            <div class="forgot-password-link" style="text-align: center; margin-top: 16px;">
                <a href="/forgot-password" style="color: var(--color-text-muted); font-size: 14px;">Forgot your password?</a>
            </div>
        </EditForm>

            <div class="auth-footer">
                <p>Don't have an account? <a href="/register">Create one</a></p>
            </div>
        }

        <div class="auth-copyright">
            <p>&copy; @DateTime.Now.Year Rossignol Software Services, LLC</p>
        </div>
    </div>
</div>

@code {
    private string? errorMessage;
    private bool _isDeactivated;
    private bool _sendingVerification;
    private bool _verificationSent;
    private ApplicationUser? _deactivatedUser;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery(Name = "deleted")]
    private string? AccountDeleted { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (HttpMethods.IsGet(HttpContext.Request.Method))
        {
            // Clear the existing external cookie to ensure a clean login process
            await HttpContext.SignOutAsync(IdentityConstants.ExternalScheme);
        }
    }

    public async Task LoginUser()
    {
        var user = await UserManager.FindByEmailAsync(Input.Email);
        if (user == null)
        {
            errorMessage = "Invalid email or password.";
            return;
        }

        // Check if account is deactivated
        if (user.IsDeactivated)
        {
            // Verify password first before showing deactivation message
            var passwordValid = await UserManager.CheckPasswordAsync(user, Input.Password);
            if (passwordValid)
            {
                _isDeactivated = true;
                _deactivatedUser = user;
                Logger.LogInformation("Deactivated user {Email} attempted login.", Input.Email);
                return;
            }
            else
            {
                // Don't reveal that account is deactivated if password is wrong
                errorMessage = "Invalid email or password.";
                return;
            }
        }

        Logger.LogInformation(
            "Attempting login for user {Email}. TwoFactorEnabled={TwoFactorEnabled}, HasAuthenticator={HasAuthenticator}",
            Input.Email,
            user.TwoFactorEnabled,
            !string.IsNullOrEmpty(await UserManager.GetAuthenticatorKeyAsync(user)));

        var result = await SignInManager.PasswordSignInAsync(
            user,
            Input.Password,
            Input.RememberMe,
            lockoutOnFailure: true);

        Logger.LogInformation(
            "Login result for {Email}: Succeeded={Succeeded}, RequiresTwoFactor={RequiresTwoFactor}, IsLockedOut={IsLockedOut}",
            Input.Email, result.Succeeded, result.RequiresTwoFactor, result.IsLockedOut);

        if (result.Succeeded)
        {
            // Update last login time
            user.LastLoginAt = DateTime.UtcNow;
            await UserManager.UpdateAsync(user);

            Logger.LogInformation("User {Email} logged in.", Input.Email);
            NavigationManager.NavigateTo(ReturnUrl ?? "/", forceLoad: true);
        }
        else if (result.IsLockedOut)
        {
            Logger.LogWarning("User {Email} account locked out.", Input.Email);
            errorMessage = "Account locked. Please try again in 15 minutes.";
        }
        else if (result.RequiresTwoFactor)
        {
            var returnUrlEncoded = Uri.EscapeDataString(ReturnUrl ?? "/");
            NavigationManager.NavigateTo(
                $"/login-2fa?returnUrl={returnUrlEncoded}&rememberMe={Input.RememberMe}",
                forceLoad: true);
        }
        else
        {
            errorMessage = "Invalid email or password.";
        }
    }

    private async Task ResendVerificationEmail()
    {
        if (_deactivatedUser == null || _sendingVerification)
            return;

        _sendingVerification = true;
        StateHasChanged();

        try
        {
            // Generate new token
            var token = await UserManager.GenerateEmailConfirmationTokenAsync(_deactivatedUser);
            var encodedToken = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(token));

            // Build verification link
            var baseUrl = EmailConfig.Value.BaseUrl.TrimEnd('/');
            var verificationLink = $"{baseUrl}/verify-email?userId={_deactivatedUser.Id}&token={encodedToken}";

            // Update sent timestamp
            _deactivatedUser.EmailVerificationSentAt = DateTime.UtcNow;
            await UserManager.UpdateAsync(_deactivatedUser);

            // Send email
            EmailTrigger.FireEmailVerification(_deactivatedUser.Email!, verificationLink, _deactivatedUser.DisplayName, 0);

            _verificationSent = true;
            Logger.LogInformation("Verification email sent to deactivated user {Email}", _deactivatedUser.Email);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to send verification email to {Email}", _deactivatedUser.Email);
            errorMessage = "Failed to send verification email. Please try again.";
        }
        finally
        {
            _sendingVerification = false;
            StateHasChanged();
        }
    }

    private void ResetDeactivatedState()
    {
        _isDeactivated = false;
        _deactivatedUser = null;
        _verificationSent = false;
        Input = new InputModel();
    }

    private sealed class InputModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        public bool RememberMe { get; set; }
    }
}
