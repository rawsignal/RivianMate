    <!-- Custom reconnection UI for Blazor Server -->
    <div id="components-reconnect-modal" class="reconnect-modal">
        <div class="reconnect-content">
            <div class="reconnect-spinner"></div>
            <h2>Connection Lost</h2>
            <p class="reconnect-message">Attempting to reconnect to the server...</p>
            <p class="reconnect-retry-message">Taking longer than expected. <a href="javascript:window.Blazor.reconnect()">Try again</a> or <a href="javascript:location.reload()">reload the page</a>.</p>
            <p class="reconnect-failed-message">Could not reconnect. <a href="javascript:location.reload()">Reload the page</a> to restore functionality.</p>
        </div>
    </div>

    <script src="js/app.js"></script>
