@using RivianMate.Api.Components.Shared
@using RivianMate.Api.Services
@using RivianMate.Core.Entities
@using RivianMate.Core.Enums

@if (Compact)
{
    <div class="bottom-stat-card">
        <div class="bottom-stat-label">
            <Icon Name="@_definition.Icon" Size="14" />
            @_definition.Title
        </div>
        <p class="bottom-stat-value">
            @FormatOdometerValue()
            @if (VehicleState?.Odometer != null)
            {
                <span class="bottom-stat-unit">@GetDistanceUnit()</span>
            }
        </p>
    </div>
}
else
{
    <CardWrapper Definition="_definition">
        <div class="quick-stat">
            @if (VehicleState?.Odometer != null)
            {
                <div class="quick-stat-value">
                    @FormatOdometerValue()<span class="quick-stat-unit">@GetDistanceUnit()</span>
                </div>
            }
            else
            {
                <div class="quick-stat-value muted">—</div>
            }
        </div>
    </CardWrapper>
}

@code {
    [Parameter]
    public DashboardContext? Context { get; set; }

    private VehicleState? VehicleState => Context?.VehicleState;
    private bool Compact => Context?.IsCompact ?? false;
    private UnitConversionService? UnitService => Context?.UnitConversionService;
    private DistanceUnit DistUnit => Context?.UserPreferences?.DistanceUnit ?? DistanceUnit.Miles;

    private static readonly DashboardCardDefinition _definition = new()
    {
        CardId = "odometer",
        Icon = "gauge",
        Title = "Odometer"
    };

    private string FormatOdometerValue()
    {
        if (VehicleState?.Odometer == null) return "—";
        var converted = UnitService?.ConvertDistance(VehicleState.Odometer, DistUnit);
        return converted?.ToString("N0") ?? "—";
    }

    private string GetDistanceUnit()
    {
        return UnitService?.GetDistanceUnit(DistUnit) ?? "mi";
    }
}
