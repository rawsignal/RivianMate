@*
    Generic "Not Found" component for when a resource doesn't exist or user doesn't have access.
    Intentionally vague to avoid confirming whether resources exist (security best practice).
*@

<div class="card" style="text-align: center; padding: var(--space-12); max-width: 500px; margin: var(--space-8) auto;">
    <div style="width: 80px; height: 80px; margin: 0 auto var(--space-6); background-color: rgba(255, 171, 0, 0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
        <Icon Name="@Icon" Size="40" Style="color: var(--color-accent); opacity: 0.7;" />
    </div>
    <h2 style="margin-bottom: var(--space-3);">@Title</h2>
    <p style="color: var(--color-text-muted); margin-bottom: var(--space-6);">@Message</p>
    <a href="/" class="btn btn-primary">
        <Icon Name="home" Size="16" />
        Back to Dashboard
    </a>
</div>

@code {
    /// <summary>
    /// The title to display. Defaults to "Not Found".
    /// </summary>
    [Parameter]
    public string Title { get; set; } = "Not Found";

    /// <summary>
    /// The message to display. Defaults to a generic message.
    /// </summary>
    [Parameter]
    public string Message { get; set; } = "The requested resource was not found or you don't have access to it.";

    /// <summary>
    /// The icon to display. Defaults to "alert-circle".
    /// </summary>
    [Parameter]
    public string Icon { get; set; } = "alert-circle";
}
