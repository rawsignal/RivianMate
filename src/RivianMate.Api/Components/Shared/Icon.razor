        case "charge-l1":
        case "bolt-1":
            @* Single lightning bolt - Level 1 charging *@
            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
            break;

        case "charge-l2":
        case "bolt-2":
